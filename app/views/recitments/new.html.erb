<h2>募集投稿</h2>
<%= form_for(@recitment) do |f| %>

	<%= f.label :"県を指定" %><br>
	<%= f.collection_select :prefecture, JpPrefecture::Prefecture.all, :code, :name %>

	<%= f.label :"タイトル" %><br>
	<%= f.text_field :title %>

	<% f.label :"一言" %><br>
	<%= f.text_area :comment %><br>

	<%= f.submit "募集する" %>
<% end %>