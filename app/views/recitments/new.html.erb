<div class="margin-top">
	<h2>募集投稿</h2>
	<%= form_for(@recitment) do |f| %>

		<%= f.label :"県を指定" %><br>
		<%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name %>　<br>

		<%= f.label :"タイトル" %><br>
		<%= f.text_field :title %><br>

		<%= f.label :"ランニングコース" %><br>


		<%= f.label :"時間" %>

		

		<%= f.label :"募集要項" %><br>
		<%= f.text_area :comment %><br>

		<%= f.submit "募集する" %>
	<% end %>
</div>
