<div class="margin-top">
	 <h1>ユーザー編集</h1>

	 <%= form_for(@user) do |f| %>
	 	<div class="form-group">
			<%= f.label :nickname, 'ニックネーム' %>
			<%= f.text_field :nickname, class: 'form-control' %>
		</div>

	    <div class="field">
	    	<%= f.label :性別　%><br />
	    	<label>
	    		<%= f.label :男 %>
			    <%= f.radio_button :gender, "男" %>
			    <%= f.label :女 %>
			    <%= f.radio_button :gender, "女" %>
	  		</label>
	  	</div>

		<div class="form-group">
			    <%= f.label :age, '年齢', class:'control-label' %>
			    <%= f.select :age, [["",""], ["10代","10"], ["20代","20"], ["30代","30"], ["40代","40"], ["50代","50"], ["60代","60"], ["70代以上","70"] ], {},   class: 'form-control' %>
		</div>

	  	<div class="form-group">
	  		<%= f.label :自己紹介文 %>
	  		<%= f.text_area :introduce, :maxlength => "255", class: 'form-control'%>
	  	</div>

	  	<div class="action">
	  		<%= f.submit %>
	  	</div>
	 <% end %>


</div>
