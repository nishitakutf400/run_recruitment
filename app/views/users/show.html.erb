
<div class="margin-top">
	 <h1>ユーザー詳細</h1>

	<div>
		 <span><%= "ユーザー" %></span>
		 <span><%= @user.nickname %></span>
	</div>

	<div>
		<span>性別</span>
		<span><%= @user.gender %></span>
	</div>

	<div>
		<span><%= "年齢" %></span>
		<span><%= @user.age %>代</span>
	</div>


	<div>
		<span><%= "紹介文" %></span>
		<span><%= @user.introduce %></span>
	</div>

	<% if @user == current_user %>
		<span><%= link_to "編集", edit_user_path %></span>

		<span><%= link_to "応募一覧", users_path(@user) %></span>

	<% end %>
</div>


